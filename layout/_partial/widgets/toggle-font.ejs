<%
function layoutDiv() {
  if (!item.content?.length && !item.src?.length) return '';
  var baseClass = 'widget-wrapper';
  var specificClass = item.layout === "toggle-font" ? 'toggle-font' : 'markdown'; // Check layout
  var el = '';
  el += `<widget class="${baseClass}${scrollreveal(' ')} ${specificClass}">`; // Apply classes
  if (item.title?.length > 0) {
    el += '<div class="widget-header dis-select">';
    el += '<span class="name">' + item.title + '</span>';
    el += '</div>';
  }
  el += '<div class="widget-body fs14">';
  if (item.content) {
    el += markdown(item.content);
  }
  if (item.src) {
    el += `<div class="ds-mdrender" src="${item.src}"></div>`;
  }
  if (item.linklist) {
    el += partial('components/linklist', {item: item.linklist});
  }
  el += '</div>';
  el += '</widget>';
  return el;
}
%>
<%- layoutDiv() %>